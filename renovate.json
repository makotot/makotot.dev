{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "labels": ["renovate"],
  "minimumReleaseAge": "48h",
  "packageRules": [
    {
      "matchUpdateTypes": ["patch", "pin", "minor"],
      "automerge": true,
      "addLabels": ["renovate: automerge"]
    }
  ],
  "rangeStrategy": "pin",
  "platformAutomerge": true
}
